<section class="posts index container pt-sm-3 pt-md-5">
  <h2 class="sr-only">글 목록</h2>
  <% if user_signed_in? && current_user.id == 1 %>
      <div class="btn-new-post text-right mb-4">
        <%= link_to 'New Post', new_post_path, class: 'py-2 px-3' %>
      </div>
  <% end %>
  <div class="row">
    <div class="col-12 col-sm-3">
      <%= render 'posts/category', categories: @categories %>
    </div>
    <div class="col-12 col-sm-9">
      <% if user_signed_in? && current_user.id == 1 %>
          <% @unpublished_posts.each do |post| %>
              <div class="">
                <%= link_to post_path(post), class: 'post unpublished d-block py-2 px-1' do %>
                    <article class="container">
                      <h4><%= post.title %></h4>
                    </article>
                <% end %>
              </div>
          <% end %>
      <% end %>
      <% @posts.each do |post| %>
          <div class="my-2">
            <%= link_to post_path(post), class: 'post d-block py-2 px-1' do %>
                <article class="px-3 d-flex flex-row justify-content-between align-items-center">
                  <h4><%= post.title %></h4>
                  <span class="comments-count px-2">(<%= post.comments_count %>)</span>
                  <span class="times"><%= post.created_at.strftime("%Y.%m.%d") %></span>
                </article>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</section>