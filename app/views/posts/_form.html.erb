<%= form_for @post, html: {id: 'form', class: 'mb-5'} do |f| %>
    <div class="mb-3">
      <%= f.text_field :title, class: 'w-100 py-2 px-3' %>
    </div>

    <div class="py-2 px-2">
      <%= f.collection_select :category_id, @categories, :id, :name %>
    </div>

    <div class="py-2 px-2">
      <%= f.text_field :tag_tokens, id: :post_tag_tokens, data: {load: @post.tags} %>
    </div>

    <%= tinymce %>
    <div class="tinymce-wrapper">
      <%= f.text_area :content, class: 'tinymce' %>
    </div>

    <div class="btn-wrapper d-flex flex-row justify-content-center mt-4">
      <%= f.submit '저장' %>
      <%= f.submit '임시저장' %>
    </div>
<% end %>
