<section class="devise container">
  <div class="row pt-5">
    <div class="col-8 col-sm-8 col-md-6 col-lg-4 col-xl-4 mx-auto mt-5">
      <h2 class="text-center py-4">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="d-flex flex-column py-2">
            <%= f.label :email %>
            <%= f.email_field :email, required: true, autofocus: true %>
          </div>
          <div class="d-flex flex-column py-2">
            <%= f.label :password %>
            <%= f.password_field :password, required: true %>
          </div>
          <div class="d-flex flex-row justify-content-between align-items-center mb-4">
            <div class="user_remember_me">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, '로그인 유지' %>
            </div>
            <div class="d-flex flex-row align-items-center">
              <%= link_to '홈으로', root_path, class: 'mx-lg-3 mx-md-1' %>
              <%= link_to '회원가입', new_user_registration_path, class: 'mx-lg-3 mx-md-1' %>
            </div>
          </div>

          <div>
            <%= f.submit 'Log in', class: 'w-100' %>
          </div>
      <% end %>
    </div>
  </div>
</section>