<section class="devise container">
  <div class="row pt-5">
    <div class="col-8 col-sm-8 col-md-6 col-lg-4 col-xl-4 mx-auto mt-5">
      <h2 class="text-center py-4">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="d-flex flex-column py-2">
            <%= f.label :email %>
            <%= f.email_field :email, required: true, autofocus: true, autocomplete: :off %>
          </div>
          <div class="d-flex flex-column py-2">
            <%= f.label :password %>
            <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          </div>
          <div class="d-flex flex-column py-2">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, required: true %>
          </div>
          <div class="d-flex flex-row justify-content-between align-items-center mb-3 mt-2">
            <%= link_to '로그인 화면으로', new_user_session_path, class: 'mx-lg-3 mx-md-1' %>
            <%= link_to '홈으로', root_path, class: 'mx-lg-3 mx-md-1' %>
          </div>

          <div>
            <%= f.submit 'Sign up', class: 'w-100' %>
          </div>
      <% end %>
    </div>
  </div>
</section>